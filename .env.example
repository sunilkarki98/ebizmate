# ===========================================
# EbizMate — Environment Variables
# ===========================================
# Copy this file and rename to .env
# Required variables must be set before starting

# --- Database ---
DATABASE_URL="postgresql://user:password@localhost:5432/ebizmate"
DIRECT_URL="postgresql://user:password@localhost:5432/ebizmate"  # Drizzle migrations (bypasses pooler)

# --- Auth ---
AUTH_SECRET="generate-a-random-32-char-secret-here"
ENCRYPTION_KEY="generate-a-random-32-char-key-here"

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# Supabase
# NEXT_PUBLIC_SUPABASE_URL=""
# NEXT_PUBLIC_SUPABASE_ANON_KEY=""

# NextAuth (used by admin panel)
# NEXTAUTH_SECRET="" # Should match AUTH_SECRET
# NEXTAUTH_URL="http://localhost:3000"
# SUPABASE_JWT_SECRET="" # Needed for NestJS Backend to verify Supabase Customer tokens

# --- Redis ---
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"

# --- AI Providers (optional — at least one needed for AI features) ---
# OPENAI_API_KEY=""
# GEMINI_API_KEY=""
# OPENROUTER_API_KEY=""
# GROQ_API_KEY=""

# --- API ---
PORT="3001"
CORS_ORIGIN="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

# --- Webhooks ---
# WEBHOOK_SECRET=""

# --- Mock Mode ---
# MOCK_AI_RESPONSE="true"

# --- Environment ---
NODE_ENV="development"
